<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Heave</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Heave.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Heave</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Login
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Login">Login</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Logout</a></li>
                                <li><a class="dropdown-item" asp-controller="Common" asp-action="CreateMember">Create Member</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Customer
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" asp-controller="Common" asp-action="CreateCustomer">Create
                                        Customer</a></li>
                                <li><a class="dropdown-item" asp-controller="Common" asp-action="Products">Display
                                        Products</a></li>
                                <li><a class="dropdown-item" asp-controller="Common" asp-action="CreateOrder">Order
                                        Product</a></li>
                                <li><a class="dropdown-item" asp-controller="Common" asp-action="MyOrders">List My
                                        Orders</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Orders">List Orders</a>
                                </li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="DeleteCustomer">Delete
                                        Customer</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Customers">Display
                                        Customers</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Members">Display
                                        Members</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Delivery
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" asp-controller="Deliver" asp-action="CreateFeature">Create
                                        Feature</a></li>
                                <li><a class="dropdown-item" asp-controller="Deliver" asp-action="Features">Display
                                        Features</a></li>
                                <li><a class="dropdown-item" asp-controller="Deliver" asp-action="DeleteFeature">Delete
                                        Feature</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Heave - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
